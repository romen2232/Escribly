{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./frontend/tsconfig.json"
    },
    "plugins": ["@typescript-eslint", "react"],
    "ignorePatterns": [
        "node_modules/",
        "build/",
        "dist/",
        "**/*.config.js",
        "**/*.d.ts"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
